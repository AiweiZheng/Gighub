@using GigHub.Core.ViewModels
@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @Styles.Render("~/Content/landing/css")
    @Scripts.Render("~/bundles/modernizr")
  

</head>

<body>	
				
<div class="intro-header">
   
    <div class="overlay">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">

                    <div class="intro-message">
                        <h1>Welcome to Gighub</h1>
                        <h3>Enjoy all the gigs we've picked up for you</h3>
                        <hr class="intro-divider">
                        <ul class="list-inline">
                            <li>

                                <a href="/Account/Login" class="btn btn-default btn-lg"><i class="fa fa-sign-in"></i> <span class="network-name">Log in</span></a>
                            </li>
                            <li>
                                <a href="/Account/register" class="btn btn-default btn-lg"><i class="fa fa-user-plus"></i> <span class="network-name">Register</span></a>
                            </li>
                            <li>
                                <div>
                                      <a id="skipToWebSite" href="/Home/index" style="margin-top: 50px">Skip to website</a>
                                </div>
                              
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- /.container -->

</div>


</body>

</html>